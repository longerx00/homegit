    <script>
        // Инициализация карты
        const map = L.map('nnovgorod-map').setView([56.326887, 44.005986], 13);
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
        
        // Добавление маркеров достопримечательностей
        const places = [
            {
                name: "Нижегородский кремль",
                coords: [56.328235, 44.002053],
                category: "history architecture"
            },
            {
                name: "Чкаловская лестница",
                coords: [56.331389, 44.008056],
                category: "architecture culture"
            },
            {
                name: "Большая Покровская",
                coords: [56.318611, 44.0025],
                category: "history culture"
            },
            {
                name: "Стрелка",
                coords: [56.333611, 43.976389],
                category: "nature"
            },
            {
                name: "Собор Александра Невского",
                coords: [56.331944, 43.971389],
