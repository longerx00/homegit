    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–∞—Ä—Ç—ã
        const map = L.map('nnovgorod-map').setView([56.326887, 44.005986], 13);
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
        
        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –º–∞—Ä–∫–µ—Ä–æ–≤ –¥–æ—Å—Ç–æ–ø—Ä–∏–º–µ—á–∞—Ç–µ–ª—å–Ω–æ—Å—Ç–µ–π
        const places = [
            {
                name: "–ù–∏–∂–µ–≥–æ—Ä–æ–¥—Å–∫–∏–π –∫—Ä–µ–º–ª—å",
                coords: [56.328235, 44.002053],
                category: "history architecture"
            },
            {
                name: "–ß–∫–∞–ª–æ–≤—Å–∫–∞—è –ª–µ—Å—Ç–Ω–∏—Ü–∞",
                coords: [56.331389, 44.008056],
                category: "architecture culture"
            },
            {
                name: "–ë–æ–ª—å—à–∞—è –ü–æ–∫—Ä–æ–≤—Å–∫–∞—è",
                coords: [56.318611, 44.0025],
                category: "history culture"
            },
            {
                name: "–°—Ç—Ä–µ–ª–∫–∞",
                coords: [56.333611, 43.976389],
                category: "nature"
            },
            {
                name: "–°–æ–±–æ—Ä –ê–ª–µ–∫—Å–∞–Ω–¥—Ä–∞ –ù–µ–≤—Å–∫–æ–≥–æ",
                coords: [56.331944, 43.971389],
                category: "architecture culture"
            },
            {
                name: "–ú—É–∑–µ–π –∏—Å—Ç–æ—Ä–∏–∏ –ì–ê–ó",
                coords: [56.233333, 43.866667],
                category: "history culture"
            }
        ];
        
        places.forEach(place => {
            L.marker(place.coords)
                .addTo(map)
                .bindPopup(`<b>${place.name}</b><br><small>–ù–∞–∂–º–∏—Ç–µ –¥–ª—è –ø–æ–¥—Ä–æ–±–Ω–æ—Å—Ç–µ–π</small>`);
        });
        
        // –§–∏–ª—å—Ç—Ä–∞—Ü–∏—è –¥–æ—Å—Ç–æ–ø—Ä–∏–º–µ—á–∞—Ç–µ–ª—å–Ω–æ—Å—Ç–µ–π
        document.querySelectorAll('.filter-btn').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                
                this.classList.add('active');
                
                const filter = this.getAttribute('data-filter');
                const placeCards = document.querySelectorAll('.place-card');
                
                placeCards.forEach(card => {
                    if (filter === 'all' || card.getAttribute('data-category').includes(filter)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });
        
        // –ú–æ–±–∏–ª—å–Ω–æ–µ –º–µ–Ω—é
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const nav = document.querySelector('nav');
        
        mobileMenuBtn.addEventListener('click', function() {
            nav.style.display = nav.style.display === 'flex' ? 'none' : 'flex';
        });
        
        // –ü–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
